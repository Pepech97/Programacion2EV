package dojo22;

public class Alumno {
	private Asignatura asignaturas[];
	private Integer notas[];
	private String nombre;
	private Integer edad;
	private Fecha fechaNacimiento;

	public Alumno( String nombre, Integer dia, Integer mes, Integer anio) {

		this.nombre = nombre;

	}
	public String getNombre() {
		return nombre;
	}
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}
	public Fecha getFechaNacimiento() {
		return fechaNacimiento;
	}
	public void setFechaNacimiento(Fecha fechaNacimiento) {
		this.fechaNacimiento = fechaNacimiento;
	}
	public void meterAsig(Asignatura asignaturas[]){
		this.asignaturas=asignaturas;
	}
	public void meterNotas(Integer notas[]){
		this.notas=notas;
	}
	public Integer getNotas(Integer posicion){
		return notas[posicion];
	}
	public Double media(){
		Double media=0.0;
		for (int i = 0; i < notas.length; i++) {
			media=media+notas[i];
		}
		media=(double) Math.round(((Double)media/notas.length)*100d / 100);
		return media;
	}
	public String calificacion(){
		if (media()>=6) {
			return "Aprobado";
		}else{
		return "Suspendido";
		}
	}
}

